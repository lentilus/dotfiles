### Variables

set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term footclient
set $menu rofi

bindsym {
	# Hardware
	XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
	XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
	XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle    
	XF86MonBrightnessUp exec light -A 5
	XF86MonBrightnessDown exec light -U 5

	# basics
	$mod+q kill
	$mod+Space exec $menu -show drun -G
	$mod+Shift+t exec  grim -g "$(slurp)" - | wl-copy

    # Terminal
    $mod+Return workspace 1; exec $term
    # $mod+Shift+Return exec $term tmux -c jump-tmux

	# sway stuff
	$mod+Shift+c reload
	$mod+Shift+q exec swaynag -t warning -m 'Exit sway?' -B 'yes' 'swaymsg exit' exit

    # uni stuff

	# misc
	$mod+w workspace 2; exec ~/git/scripts/bookmarks

    $mod+x workspace 3; exec $term --title=xk nvim -c ':lua require("telescope") require("xettelkasten.zettel").find()'
    $mod+Shift+x workspace 3; exec ~/git/xettelkasten-core/scripts/viewpdf

    $mod+e workspace 5; exec $term --title=ranger ranger

	$mod+m workspace 4; exec $term --title=neomutt neomutt
    $mod+z workspace 7; exec mpv $(find $HOME/music -maxdepth 1 -mindepth 1 | rofi -dmenu)
}


